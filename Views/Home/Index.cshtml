            }

            .hero-subtitle {
                font-size: 1rem;
                margin-bottom: 2rem;
                line-height: 1.5;
            }

            .button-container {
                flex-direction: column;
                align-items: center;
                gap: 1rem;
            }

            .hero-content {
                margin: 0.5rem;
