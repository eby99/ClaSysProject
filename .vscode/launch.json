{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üåê Debug Web App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/RegistrationPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "üîå Debug Web API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/RegistrationPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/api/UsersApi"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "api",
                "ASPNETCORE_URLS": "http://localhost:8090"
            }
        },
        {
            "name": "üìß Debug Email Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/RegistrationPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5500",
                "DEBUG_EMAIL_SERVICE": "true",
                "NotificationService__CheckIntervalMinutes": "1",
                "NotificationService__Enabled": "true",
                "NotificationService__NotificationThresholdHours": "0"
            }
        },
        {
            "name": "üîó Debug Combined (Web + API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/RegistrationPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000",
                "DEBUG_MODE": "Combined",
                "ApiBaseUrl": "http://localhost:8090/",
                "DEBUG_EMAIL_SERVICE": "true",
                "NotificationService__CheckIntervalMinutes": "2",
                "NotificationService__Enabled": "true"
            }
        }
    ],
    "compounds": [
        {
            "name": "üöÄ Multi-Debug: Web App + API",
            "configurations": [
                "üåê Debug Web App",
                "üîå Debug Web API"
            ]
        },
        {
            "name": "üéØ Full Debug: Web + API + Email",
            "configurations": [
                "üåê Debug Web App",
                "üîå Debug Web API",
                "üìß Debug Email Service"
            ]
        }
    ]
}